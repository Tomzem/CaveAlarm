<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_255_black"
    android:orientation="vertical"
    tools:context=".ui.MainActivity">

    <com.search.baselibrary.widget.TitleBar
        android:id="@+id/tb_first_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/colorTitleBar"
        app:showType="0"/>

    <ListView
        android:id="@+id/lv_alarm_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10"
        android:dividerHeight="@dimen/dp_10"
        tools:listitem="@layout/list_item_alarm_info"/>

    <Button
        android:id="@+id/btn_add_alarm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_height"
        android:text="@string/add_alarm"/>

</LinearLayout>